# OpenAI API key for LLM-based evaluation (optional if using Ollama)
OPENAI_API_KEY=sk-your-api-key-here

# Dynamic expansion parameters
SIMILARITY_THRESHOLD=0.75
MAX_EXPAND=5
TOP_K=5

# Embedding model (HuggingFace model name)
# Options: BAAI/bge-small-en-v1.5, intfloat/multilingual-e5-large
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5

# LLM provider: "openai" or "ollama"
LLM_PROVIDER=openai

# Ollama settings (if using local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3
